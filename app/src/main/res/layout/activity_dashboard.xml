<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color"
    android:gravity="center">

    <!-- Logo de la aplicación -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo de la aplicación"
        android:layout_marginBottom="24dp" />

    <!-- Mensaje de bienvenida -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Hola, bienvenido a FortPass!"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginBottom="24dp" />

    <!-- Nombre de la aplicación -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FortPass"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="24dp" />

    <!-- Botón para agregar contraseña -->
    <Button
        android:id="@+id/addPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Contraseña"
        android:backgroundTint="@color/button_pressed"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <!-- Botón para ver contraseñas -->
    <Button
        android:id="@+id/viewPasswordsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Contraseñas"
        android:backgroundTint="@color/button_pressed"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <!-- Botón para cerrar sesión -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:backgroundTint="@color/mok"
        android:textColor="@color/white" />

    <!-- Pie de página con autor -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desarrollado por André Piffaut"
        android:textSize="18sp"
        android:textColor="@color/border"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="1dp" />

    <!-- Botón para eliminar cuenta -->
    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Cuenta"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
